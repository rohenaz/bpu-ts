{
  "files": ["src/index.ts", "src/browser.ts", "jest.config.ts"],
  "exclude": [
    "./coverage",
    "./node_modules",
    "./test",
    "./.parcel-cache",
    "./types"
  ],
  "include": ["src/**/*", "types/**/*", "types/**/**/*", "test/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["src", "node_modules/@types", "types"],
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
