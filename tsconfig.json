{
  "exclude": ["./coverage", "./node_modules", "./test", "./src/types"],
  "include": ["src/"],
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
