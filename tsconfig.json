{
  "exclude": [
    "./coverage",
    "./node_modules",
    "./test",
    "./.parcel-cache",
    "./src/types",
    "jest.config.ts"
  ],
  "include": ["src", "test/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
