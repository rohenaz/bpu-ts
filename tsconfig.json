{
  "files": ["jest.config.ts"],
  "exclude": [
    "./coverage",
    "./node_modules",
    "./test",
    "./.parcel-cache",
    "./types"
  ],
  "include": [
    "src/index.ts",
    "src/browser.ts",
    "types/common.d.ts",
    "test/**/*"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
