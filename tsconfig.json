{
  "exclude": [
    "../coverage",
    "./node_modules",
    "./test",
    "./.parcel-cache",
    "jest.config.ts"
  ],
  "baseUrl": "./src",
  "include": ["./", "../test/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "rootDirs": ["./src", "./src/types"],
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
