{
  "exclude": ["./coverage", "./node_modules", "./test", "jest.config.ts"],
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
